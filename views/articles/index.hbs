<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview Experience</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Interview Articles</h1>
        <a href="/articles/new" class="btn btn-success">New article</a>

        {{#each articles}}
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <div class="card-subtitle text-muted mb-2">
                        {{!-- {{this.createdAt.toLocaleDateString('EU'))}}; --}}
                        {{this.currentDate}}
                    </div>
                    <div class="card-text mb-2">
                        {{this.description}}
                    </div>
                    <a href="/articles/{{this.slug}}" class="btn btn-primary">Read more</a>
                    <a href="/admin/edit/{{this.id}}" class="btn btn-info">Edit</a>
                    <form action="/uploads/{{this.id}}" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Upload</button>
                    </form>
                    <form action="/admin/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        {{/each}}
    
    </div>
</body>
</html>